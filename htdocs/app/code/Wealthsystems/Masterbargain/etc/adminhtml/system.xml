<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="wsbargain" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Gerenciamento de Negociação do Preço</label>
            <tab>wscustom</tab>
            <resource>Mageplaza_Core::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">

                <comment>
                    <![CDATA[ <div style="background: #103958; border: none; border-radius: 3px">
                    <div style="padding:15px;text-align: center; vertical-align:bottom;">
                    <a href="http://wssim.com.br/" target="_blank">
                    <img src="https://mastercenter.ws/wp-content/uploads/2019/04/marcas-master.png" style="margin: auto; width: 200px;" />
                    </a>
                    </div>
                    <div class="clear"></div>
                    </div> ]]>
                </comment>

                <label>General Management</label>
                <field id="enable_bargain" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Bargain Pricing</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable bargain product pricing by customer negotiation</comment>
                </field>
                <field id="max_approve" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Automatic Approved by Percentage</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>New price approved by maximum percentage of discount</comment>
                </field>
                <field id="max_approve_percentage" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Maximum Percentage</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Maximum percentage to discount automatic</comment>
                </field> 
            </group>          
        </section>
    </system>
</config>
